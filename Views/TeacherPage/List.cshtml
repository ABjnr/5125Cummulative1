@{
    ViewData["Title"] = "Teacher List";
}

@model List<_5125Cummulative1.Models.Teacher>

<h1>Teachers</h1>

<table>
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Employee Number</th>
            <th>Hire Date</th>
            <th>Salary</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var teacher in Model)
        {
                <tr>
                    <td>@teacher.FirstName</td>
                    <td>@teacher.LastName</td>
                    <td>@teacher.EmployeeNumber</td>
                    <td>@teacher.HireDate.ToString("yyyy-MM-dd")</td>
                    <td>@teacher.Salary</td>
                </tr>
        }
    </tbody>
</table>

<style>
    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }
    th, td {
        border: 1.5px solid;
        padding: 8px;
        text-align: left;
    }
    th {
        background-color: #89DFF2;
    }
    h1 {
        text-align: center;
        margin-top: 20px;
    }
</style>