@{
    ViewData["Title"] = "Students List";
}

@model List<_5125Cummulative1.Models.Student>

<h1>Students</h1>

<table>
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Student Number</th>
            <th>Enrollment Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.FirstName</td>
                <td>@student.LastName</td>
                <td>@student.StudentNumber</td>
                <td>@student.EnrollmentDate.ToString("yyyy-MM-dd")</td>
            </tr>
        }
    </tbody>
</table>


<style> 
    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    th, td {
        border: 1.5px solid;
        padding: 8px;
        text-align: left;
    }

    th {
        background-color: #89DFF2;
    }

    h1 {
        text-align: center;
        margin-top: 20px;
    }
</style>